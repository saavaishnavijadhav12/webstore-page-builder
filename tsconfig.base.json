      "@znode/data-providers/server": ["packages/data-providers/src/server.ts"],
      "@znode/logger": ["packages/logger/src/index.ts"],
      "@znode/logger/server": ["packages/logger/src/server.ts"],
      "@znode/page-builder/page-editor": ["packages/page-builder/src/page-editor/PageEditor.tsx"],
      "@znode/page-builder/page-render": ["packages/page-builder/src/page-render/PageRender.tsx"],
